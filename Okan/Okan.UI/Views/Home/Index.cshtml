<div class="alert alert-{{vm.alert.status}} alert-dismissible fade show" role="alert" ng-if="vm.alert.show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    {{vm.alert.message}}
</div>

<div class="row main" ng-cloak>
    <div class="col-md-6">
        <div class="cart">
            <p class="title">Cart</p>

            <p ng-if="vm.cart.drinks.length == 0">Please add some drinks here. :(</p>

            <div ng-if="vm.cart.drinks.length > 0">
                <ul>
                    <li ng-repeat="item in vm.cart.drinks">
                        <span>{{item.drink.name}}</span> - <span>x{{item.count}}</span>
                        <button type="button" class="btn btn-sm btn-danger float-right" ng-click="vm.removeDrink(item.drink)">-</button>
                    </li>
                </ul>
                <button type="button" class="btn btn-sm btn-success float-right" ng-click="vm.checkoutCart()">Checkout</button>
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="drinks box">
            <p class="title">Drinks</p>
            <ul>
                <li ng-repeat="drink in vm.drinks">
                    <span>{{drink.name}}</span>
                    <button type="button" class="btn btn-sm btn-success float-right" ng-click="vm.addDrink(drink)">+</button>
                </li>
            </ul>
        </div>
    </div>
</div>